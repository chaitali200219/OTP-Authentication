# App
APP_NAME="FastAPI OTP Auth"
APP_VERSION="1.0.0"
APP_ENV="development"

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/otp_auth_db

# Redis
REDIS_URL=redis://localhost:6379

# OTP
OTP_EXPIRE_SECONDS=300  # 5 minutes

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
